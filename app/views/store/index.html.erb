<% if notice %>
<p id="notice" class="alert alert-danger"><%= notice %></p>
<% end %>

<% @products.each do |product| %>
<div class="row">
	<div class="col-md-3">
		<%= image_tag(product.image_url, :class => 'product-img') %>
	</div>
	<div class="col-md-9">
		<h3><%= product.title %></h3>
		<%= sanitize product.description %>
		<div class="price_line">
			<span class="price"><%= number_to_currency(product.price) %></span>
			<%= button_to 'Add to Cart', line_items_path(:product_id => product), :class => 'btn btn-success btn-xs pull-right' %>
		</div>		
	</div>	
</div>
<hr/>
<% end %>
